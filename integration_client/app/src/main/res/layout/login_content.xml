<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b8b894"
    tools:context="sjsu.cmpe235.smartstreet.user.LoginActivity"

    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idText"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/username"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdText"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/password"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/loginBtn"
        android:layout_alignStart="@+id/imageView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/loginBtn"
        android:textColor="#ffffff"
        android:id="@+id/loginBtn"
        android:background="#1B5E20"
        android:layout_alignBottom="@+id/skipBtn"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/registerBtn"
        android:id="@+id/regBtn"
        android:background="#3498db"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/pwdText" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/skipBtn"
        android:id="@+id/skipBtn"
        android:background="#e21414"
        android:textColor="#ffffff"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="142dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo4"
        android:layout_above="@+id/idText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/barcode"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/skipBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scan QR code to visit our website"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_alignStart="@+id/loginBtn"
        android:layout_alignBottom="@+id/imageView2" />


</RelativeLayout>
