<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

<!--  layout for listview to inflate in comment activity -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="156dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UserName"
            android:id="@+id/userNameView"
            android:layout_weight="0.07"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comment"
            android:id="@+id/commentView"
            android:layout_below="@+id/userNameView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time"
            android:id="@+id/timeView"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignRight="@+id/ratingBar2"
            android:layout_alignEnd="@+id/ratingBar2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="By"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/userNameView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="on"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/userNameView"
            android:layout_toLeftOf="@+id/timeView"
            android:layout_toStartOf="@+id/timeView"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="22dp" />

    </RelativeLayout>
</LinearLayout>
