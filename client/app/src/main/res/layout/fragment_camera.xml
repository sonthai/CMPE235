<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grafixartist.bottomnav.CommentFrag">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.grafixartist.bottomnav.CameraFragment"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Camera"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:id="@+id/cameraButton"
            android:layout_marginRight="38dp"
            android:src="@drawable/photos"
            android:layout_below="@+id/textView15"
            android:layout_toStartOf="@+id/textView15"
            android:layout_marginTop="49dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:id="@+id/videoButton"
            android:layout_marginLeft="38dp"
            android:src="@drawable/video1"
            android:layout_above="@+id/photoView"
            android:layout_toEndOf="@+id/textView15" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:id="@+id/photoView"
            android:clickable="true"
            android:longClickable="true"
            android:layout_weight="0.21"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="100dp"
            android:layout_below="@+id/cameraButton"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/shareButton"
            android:visibility="invisible"
            android:layout_below="@+id/photoView"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cameraButton"
            android:background="#74d6f7" />

    </RelativeLayout>

</FrameLayout>